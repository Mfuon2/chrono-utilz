{
  "name": "@mfuon2/chrono-utilz",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false,
  "version": "2.0.1",
  "description": "A comprehensive date utility library built on Three Pillars Architecture: Core Operations (45+ functions), Business Utilities (55+ functions), and Formatting & Parsing (35+ functions). Features natural language parsing, timezone conversion, fiscal periods, working days, and advanced business logic.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "date",
    "time",
    "datetime",
    "utility",
    "timezone",
    "calendar",
    "formatting",
    "parsing",
    "business-logic",
    "fiscal",
    "working-days",
    "natural-language",
    "iana-timezones", 
    "recurring-patterns",
    "payroll",
    "project-management",
    "sla-compliance",
    "overtime-calculation",
    "shift-scheduling",
    "three-pillars",
    "comprehensive",
    "typescript",
    "date-utils"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "build:browser": "node build-browser.js",
    "start:web": "node start-web-ui.js",
    "test": "mocha -r ts-node/register 'tests/**/*.test.ts' --reporter mocha-json-output-reporter --reporter-options output=report/json/result.json",
    "test:ci": "npm run test",
    "coverage": "nyc --reporter=lcov npm test",
    "lint": "eslint 'src/**/*.ts' --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build"
  },
  "mochaJunitReporterReporterOptions": {
    "mochaFile": "results/test-results.xml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mfuon2/chrono-utilz.git"
  },
  "bugs": {
    "url": "https://github.com/Mfuon2/chrono-utilz/issues"
  },
  "homepage": "https://github.com/Mfuon2/chrono-utilz#readme",
  "author": "Leonard Mfuon <mfuoon@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.0",
    "@types/sinon": "^10.0.15",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "chai": "^4.3.7",
    "eslint": "^8.57.1",
    "globals": "^16.1.0",
    "mocha": "^10.2.0",
    "mocha-json-output-reporter": "^2.1.0",
    "nyc": "^15.1.0",
    "sinon": "^15.0.4",
    "ts-node": "^10.9.1",
    "tsup": "^8.4.0",
    "typescript": "^5.0.4",
    "typescript-eslint": "^8.32.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
